<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/uProfile"
        android:layout_width="131dp"
        android:layout_height="139dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:clickable="true"
        android:elevation="9dp"
        android:src="@drawable/defaultprofile"
        app:layout_constraintBottom_toTopOf="@+id/uAge"
        app:layout_constraintEnd_toStartOf="@+id/uName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/uName"
        android:layout_width="236dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="53dp"
        android:background="@drawable/textfields"
        android:drawablePadding="4dp"
        android:elevation="9dp"
        android:ems="10"
        android:gravity="center"
        android:hint="User Name"
        android:inputType="textEmailAddress"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:textColor="#000000"
        android:textColorHint="#807474"
        android:textColorLink="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/uBio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/uProfile"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/uBio"
        android:layout_width="232dp"
        android:layout_height="178dp"
        android:layout_gravity="center"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/textfields"
        android:elevation="9dp"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="Bio..."
        android:inputType="textMultiLine|text"
        android:maxLength="120"
        android:maxLines="6"
        android:textColor="#000000"
        android:textColorHint="#807474"
        android:textColorLink="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/uPassion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/uAge"
        app:layout_constraintTop_toBottomOf="@+id/uName" />

    <EditText
        android:id="@+id/uPassion"
        android:layout_width="386dp"
        android:layout_height="128dp"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/textfields"
        android:elevation="9dp"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="Passaion..."
        android:inputType="textMultiLine|text"
        android:maxLength="150"
        android:maxLines="4"
        android:textColor="#000000"
        android:textColorHint="#807474"
        android:textColorLink="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/uPropose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uSex" />

    <EditText
        android:id="@+id/uPropose"
        android:layout_width="386dp"
        android:layout_height="128dp"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/textfields"
        android:elevation="9dp"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint='Write " I Love You " In Your Style...'
        android:inputType="textMultiLine|text"
        android:maxLength="150"
        android:maxLines="4"
        android:textColor="#000000"
        android:textColorHint="#807474"
        android:textColorLink="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uPassion" />

    <EditText
        android:id="@+id/uAge"
        android:layout_width="100dp"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/textfields"
        android:elevation="9dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Age"
        android:inputType="number"
        android:textColorHint="#807474"
        android:textColorLink="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/uHeight"
        app:layout_constraintEnd_toStartOf="@+id/uBio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uProfile"
        app:layout_constraintVertical_bias="0.100000024" />

    <EditText
        android:id="@+id/uHeight"
        android:layout_width="100dp"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/textfields"
        android:elevation="9dp"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="Height(feet)"
        android:inputType="number"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#807474"
        android:textColorLink="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/uSex"
        app:layout_constraintEnd_toStartOf="@+id/uBio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uAge" />

    <EditText
        android:id="@+id/uSex"
        android:layout_width="100dp"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="9dp"
        android:autoText="false"
        android:background="@drawable/textfields"
        android:elevation="9dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Sex"
        android:inputType="textCapSentences"
        android:maxLength="6"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textColorHint="#807474"
        android:textColorLink="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/uPassion"
        app:layout_constraintEnd_toStartOf="@+id/uBio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uHeight" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="259dp"
        android:layout_height="48dp"

        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:layout_marginBottom="4dp"
        android:elevation="9dp"
        android:text="Save"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:visibility="visible"
        app:backgroundTint="#CA453B"
        app:elevation="9dp"
        app:layout_constraintBottom_toTopOf="@+id/btnClose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uPropose" />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="259dp"
        android:layout_height="48dp"

        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:layout_marginBottom="9dp"
        android:elevation="9dp"
        android:text="Close"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:visibility="visible"
        app:backgroundTint="#CA453B"
        app:elevation="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSave" />

</androidx.constraintlayout.widget.ConstraintLayout>